<!--      android:paddingStart="14dp"-->
<!--      android:paddingTop="4dp"-->
<!--      android:paddingEnd="14dp"-->
<!--      android:paddingBottom="4dp"-->
<!--      android:textColor="@color/space_white"-->
<!--      app:fontFamily="@font/iran_light"-->
<!--      tools:text="@string/answered_admin" />-->


    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/txt_message_state_admin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_bg_answered"
      android:drawableLeft="@drawable/ic_call_made"
      android:drawablePadding="8dp"
      android:drawableTint="@color/space_white"
      android:paddingLeft="8dp"
      android:layout_alignParentRight="true"
      android:layout_above="@+id/layout_btns"
      android:paddingTop="4dp"
      android:paddingRight="8dp"
      android:paddingBottom="4dp"
      android:text="جواب داده شده"
      android:textColor="@color/colorLight"
      android:textSize="12sp"
      app:fontFamily="@font/iran_light" />

    <RelativeLayout
      android:id="@+id/layout_btns"
      android:layout_width="match_parent"
      android:layout_height="95dp"
      android:layout_below="@+id/txt_item_admin_answer_type"
      android:layout_alignParentRight="true"
      android:layout_alignParentLeft="true"
      android:layout_marginTop="8dp"
      android:gravity="center"
      android:orientation="horizontal">

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_wrong_question_admin_answer"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:text="این سوال فنی است"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:fontFamily="@font/iran_light" />


      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_answer_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="پاسخ"
        android:textSize="12sp"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="24dp" />
    </RelativeLayout>

  </RelativeLayout>

</com.google.android.material.card.MaterialCardView>